<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activities.Add_NewHall">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_centerInParent="true">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_gravity="center"
                android:src="@drawable/hms" />

            <EditText
                android:id="@+id/txtName"
                style="@style/profileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/ic_text_fields_black_24dp"
                android:hint="Hall Name"
                android:lines="1"
                android:maxLines="1"
                android:text="" />

            <View
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4b000000" />

            <EditText
                android:id="@+id/txt_Area"
                style="@style/profileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                android:hint="Area"
                android:lines="1"
                android:maxLines="1"
                android:text="" />

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4b000000" />


            <TextView
                android:id="@+id/txt_Email14"
                style="@style/profileEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-45dp"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                android:hint="Type"
                android:lines="1"
                android:maxLines="1"
                android:text="" />

            <ProgressBar
                android:id="@+id/progressbar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="invisible" />

            <Spinner
                android:id="@+id/spinner_Type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="-50dp" />

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4b000000" />

            <TextView
                android:id="@+id/txt_Facilities"
                style="@style/profileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                android:hint="Facilities"
                android:lines="1"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/Airconditioner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air Conditioning" />

            <CheckBox
                android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alarm System" />

            <CheckBox
                android:id="@+id/wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wifi/Internet" />

            <CheckBox
                android:id="@+id/equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Projection Equipment" />

            <CheckBox
                android:id="@+id/storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Storage" />

            <CheckBox
                android:id="@+id/cafeteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cafeteria/Catering" />

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4b000000" />


            <EditText
                android:id="@+id/txt_Price"
                style="@style/profileEditText"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:hint="Price"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4b000000"/>




            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-100dp"
                app:srcCompat="@android:drawable/ic_menu_report_image" />
            <Button
                android:id="@+id/btn_Upload"
                style="@style/profileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/ic_file_upload_black_24dp"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:text="Upload Image" />
            <Button
                android:id="@+id/btn_Save"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/roundcorner_button"
                android:drawablePadding="-15sp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:elevation="15dp"
                android:paddingRight="16dp"
                android:text="Save"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>


    </ScrollView>
</RelativeLayout>